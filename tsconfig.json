{
  "compilerOptions": {
    "target": "ES2021",
    "module": "NodeNext",
    "lib": ["ES2023"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "inlineSources": false,
    "skipLibCheck": true,
    "incremental": true,
    "allowJs": true,
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["src/**/*"],

  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
